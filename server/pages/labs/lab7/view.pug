extends ../../../views/layout
block content
  h2.lab-title Лабораторная работа №#{activeLab}

  ul.tab
    li
      a#tab-loop.defaultOpen.tablinks(href='javascript:void(0)') Циклы
    li
      a#tab-table.tablinks(href='javascript:void(0)') Таблицы

  div#div-loop.tabcontent
    h3 Генерация циклов
    p Выберите значения полей, чтобы сгенерировать цикл:
    div.loops
      p Начало цикла:
      input#start-input(type='number', autofocus)
      p Конец цикла:
      input#end-input(type='number')
      p Шаг цикла:
      input#step-input(type='number')

      div
      button#generate-loop(type='button', style='display:inline-block;')
        | Сгенерировать
      span#auto-loop(style='font-size: 0.7em;margin-left: 5px;display: none')
        | Сгенерировано по последнему значению в базе

  div#div-table.tabcontent
    h3 Генерация таблиц
    div.tables
      p Выберите номер таблицы:
      select#table-number
        - for (var i = 1; i <= 4; i++)
          option(value=i) #{i}
      p Количество строк:
      input#rows(type='number', value='5')
      div#for-table-4(style='display:none')
        p Количество столбцов:
        input#cols(type='number', value='5')
        p Шаблон:
        select#template(type='text')
          option(value='3, 2, 1') 3, 2, 1
          option(value='1, 2, 3') 1, 2, 3
          option(value='2, 1, 3') 2, 1, 3

      div(style='display: block;')
      button#generate-table(type='button', style='display:inline-block;')
        | Сгенерировать
      span#auto-table(style='font-size: 0.7em;margin-left: 5px;display: none')
        | Сгенерировано по последнему значению в базе

block application
  script(src='/bin/lab7.js', charset='utf-8')
